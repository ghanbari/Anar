{% block scripts %}
    <script>
        var basePath = '{{ app.request.getUriForPath('') }}';
        function renderTime(){
            var currentTime = new Date();
            var h = currentTime.getHours();
            var m = currentTime.getMinutes();
            var s = currentTime.getSeconds();
            var month = new Array(12);
            month[0] = "Jan";
            month[1] = "Feb";
            month[2] = "Mar";
            month[3] = "Apr";
            month[4] = "May";
            month[5] = "June";
            month[6] = "July";
            month[7] = "Aug";
            month[8] = "Sep";
            month[9] = "Oct";
            month[10] = "Nov";
            month[11] = "Dec";
            var weekday = new Array(7);
            weekday[0]=  "Sun";
            weekday[1] = "Mon";
            weekday[2] = "Tue";
            weekday[3] = "Wed";
            weekday[4] = "Thu";
            weekday[5] = "Fri";
            weekday[6] = "Sat";

            var rooz_hafte = weekday[currentTime.getDay()];
            var mah = month[currentTime.getMonth()];
            var sal = currentTime.getFullYear();
            var rooz = currentTime.getDate();

            if (h < 10){
                h = "0" + h;
            }
            if (m < 10){
                m = "0" + m;
            }
            if (s < 10){
                s = "0" + s;
            }

            var myClock = $('#sp-clockWrap time');
            var myDate = $('#sp-clockWrap span');
            myClock.html(h + ":" + m + ":" + s);
            myDate.html(rooz_hafte + " " + mah + " " + rooz + " " + sal);
            setTimeout('renderTime()', 1000);
        }
        renderTime();
    </script>

    <script src="{{ asset('bundles/fosjsrouting/js/router.js') }}"></script>
    <script src="{{ asset('bundles/anarsuperpanel/js/routes.js') }}"></script>
{% endblock scripts %}
</body>
